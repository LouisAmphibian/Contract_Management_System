        </ul>
    </div>

    <!--Main Content-->
    <div class="dash-main-content">
        <div class="header-wrapper">
            <div class="header-title">
                <span>Program Manager</span>
                <h2>Dashboard</h2>
            </div>

            <!--Profile -->
            <div class="user-info">
                <div class="search-box">
                    <i class="fa-solid fa-search"></i>
                    <input type="text" placeholder="Search" />
                </div>
                <img src="~/images/pm_man-avatar.png" />
            </div>
        </div>

        <!--Tebular-->
        <div class="tabular-wrapper">
            <div class="d-flex justify-content-between align-items-center">
                <h3 classs="main-title">Your Request Claims</h3>
                <a class="btn btn-success mb-2" asp-controller="" asp-action="">View Histroy</a>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Type Of Claim</th>
                            <th>Description</th>
                            <th>Hours worked</th>
                            <th>Hourly rate</th>
                            <th>Amount</th>
                            <th>Date Filed</th>
                            <th>Asigned To</th>
                            <th>Status</th>
                            <th>Resolution Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>004</td>
                            <td>Breach</td>
                            <td>They hacked my acc</td>
                            <td>6hr</td>
                            <td>$10</td>
                            <td>$100</td>
                            <td>02/10/2024</td>
                            <td>Nkosana</td>
                            <td>Pending</td>
                            <td>14/11/2024</td>
                            <td>
                                <div class="d-flex flex-column">
                                    <a class="btn btn-secondary btn-sm mb-2" asp-controller="" asp-action="" asp-route-id="">Approve</a>
                                    <a class="btn btn-primary btn-sm" asp-controller="" asp-action="" asp-route-id="">Deny</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="11">Total: 400</td>
                        </tr>
                    </tfoot>

                </table>
            </div>
        </div>
    </div>

</div>