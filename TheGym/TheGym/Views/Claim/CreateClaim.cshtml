@{
    ViewData["Title"] = "Create Claims";
}
@model TheGym.Models.Claim

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5"> New Course</h2>

        <form method="post" asp-controller="Claim" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Your Name</label>
                <div class="col-sm-8">
                    <input 
                        class="form-control" 
                        asp-for="Name" 
                        required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Your Surname</label>
                <div class="col-sm-8">
                    <input 
                        class="form-control" 
                        asp-for="Surname"
                           required />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Type Of Claim</label>
                <div class="col-sm-8">
                    <select 
                        asp-for="TypeOfClaim" 
                        required>
                        <option selected disabled>Select a claim</option>
                        <option value="employee benefits">Employee Benefits</option>
                        <option value="property claims">Property Claims</option>
                        <option value="liability claims">Liability Claims</option>
                        <option value="cybersecurity claims">Cybersecurity Claims</option>
                    </select>
                    
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input 
                        class="form-control"
                           asp-for="ClaimDescription"
                           required />
                    <span asp-validation-for="ClaimDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Hours Worked</label>
                <div class="col-sm-8">
                    <input class="form-control"
                           asp-for="HoursWorked"
                           required />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Hourly Rate</label>
                <div class="col-sm-8">
                    <input class="form-control"
                           asp-for="HourlyRate"
                           required />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Index" role="button">Cancel </a>
                </div>
            </div>

        </form>
    </div>

</div>
